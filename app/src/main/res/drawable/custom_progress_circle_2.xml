<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thickness="3dp"
            android:useLevel="false">
            <solid android:color="@color/gray_progress_bar" />
        </shape>
    </item>
    <item>
        <rotate
            android:drawable="@color/black"
            android:fromDegrees="80"
            android:pivotX="71%"
            android:pivotY="33%"
            android:toDegrees="80">
            <shape
                android:shape="ring"
                android:thicknessRatio="22"
                android:innerRadius="0dp"
                android:useLevel="false">
                <solid android:color="@color/orange_progress_bar" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:drawable="@color/black"
            android:fromDegrees="81"
            android:pivotX="24%"
            android:pivotY="50%"
            android:toDegrees="81">
            <shape
                android:shape="ring"
                android:thicknessRatio="22"
                android:innerRadius="0dp"
                android:useLevel="false">
                <solid android:color="@color/orange_progress_bar" />
            </shape>

        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="11"
                android:innerRadius="36dp"
                android:useLevel="true">
                <solid android:color="@color/orange_progress_bar" />
            </shape>

        </rotate>
    </item>

</layer-list>